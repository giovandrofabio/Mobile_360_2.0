{%CLASSGROUP 'FMX.Controls.TControl'}

{$R *.dfm}

procedure Tdm.DataModuleCreate(Sender: TObject);
begin
   with conn do
   begin
      Params.Values['DriverID'] := 'SQLLite';
      {$IFDEF IOS}
      Params.Values['Database'] := TPath.Combine(TPath.GetDocumentsPath, 'pedidos.db');
      {$ENDIF}

      {$IFDEF ANDROID}
      Params.Values['Database'] := TPath.Combine(TPath.GetDocumentsPath, 'pedidos.db');
      {$ENDIF}

      {$IFDEF MSWINDOWS}

      {$ENDIF}
   end;
end;

end.
